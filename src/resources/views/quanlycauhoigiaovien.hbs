<div class="container mt-5">
  <button type="button" class="btn btn-success fs-3 teacher-btn-list">Danh sách</button>
  <button type="button" class="btn btn-warning fs-3 teacher-btn-add">Thêm câu hỏi</button>
  <table class="table list-teacher mt-4">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Mã câu hỏi</th>
        <th scope="col">Câu hỏi</th>
        <th scope="col">Chủ đề</th>
        <th scope="col">Mức độ</th>
        <th scope="col">Người tạo</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col">Tình trạng</th>
      </tr>
    </thead>
    <tbody>
      {{#each dscauhoi}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.CH_id}}</td>
        <td>{{this.CH_noidung}}</td>
        <td>{{this.CD_name}}</td>
        <td>{{this.DK_name}}</td>
        <td>{{this.GV_name}}</td>
        <td>{{this.CH_thoigiantao}}</td>
        <td>{{#if this.duyet}}Đã duyệt{{else}}Chưa duyệt{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="add-teacher hide mt-5">
    <form action="" method="POST">
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Nội dung</label>
        <input type="text" class="form-control fs-3" id="name" name="noidung" required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Đáp án 1</label>
        <input type="text" class="form-control fs-3" id="name" name="dapan1" required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Đáp án 2</label>
        <input type="text" class="form-control fs-3" id="name" name="dapan2" required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Đáp án 3</label>
        <input type="text" class="form-control fs-3" id="name" name="dapan3" required>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Đáp án 4</label>
        <input type="text" class="form-control fs-3" id="name" name="dapan4" required>
      </div>
      <select class="form-select fs-3 mb-3" aria-label="Default select example" name="dapan0">
        <option selected>Đáp án đúng</option>
        <option value="1">Đáp án 1</option>
        <option value="2">Đáp án 2</option>
        <option value="3">Đáp án 3</option>
        <option value="4">Đáp án 4</option>
      </select>
      <select class="form-select fs-3 mb-3" aria-label="Default select example" name="chude">
        <option selected>Chủ đề</option>
        {{#each dschude}}
        <option value="{{this.CD_id}}">{{this.CD_name}}</option>
        {{/each}}
      </select>
      <select class="form-select fs-3 mb-3" aria-label="Default select example" name="dokho">
        <option selected>Độ khó</option>
        {{#each dsdokho}}
        <option value="{{this.DK_id}}">{{this.DK_name}}</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-primary fs-3">Thêm câu hỏi</button>
    </form>
  </div>
</div>