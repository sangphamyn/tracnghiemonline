<div class="container my-5">
  <h3 class="mb-5">{{dokhochude.DK_name}}</h3>
  <table class="table list-teacher">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Mã câu hỏi</th>
        <th scope="col">Câu hỏi</th>
        <th scope="col">Chủ đề</th>
        <th scope="col">Người tạo</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col">Tình trạng</th>
      </tr>
    </thead>
    <tbody>
      {{#each dscauhoi}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.CH_id}}</td>
        <td><a href="/gv/ctch/{{this.CH_id}}">{{this.CH_noidung}}</a></td>
        <td>{{this.CD_name}}</td>
        <td>{{this.GV_name}}</td>
        <td>{{this.CH_thoigiantao}}</td>
        <td>{{#if this.duyet}}Đã duyệt{{else}}Chưa duyệt{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>